@{
  Layout = "_Layout";
}

<h1>@Model["vendor"].Name's Order Details:</h1>
<div id="orderDetails">
  <h4>@Model["order"].Title</h4>
  <h4>@Model["order"].Description</h4>
  <h4>Price: $@Model["order"].Price</h4>
  <h4>Date And Time: @Model["order"].DateAndTime</h4>
</div>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another Order</a>
<a href='/vendors'>View All Vendors</a>